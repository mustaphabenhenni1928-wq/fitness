{% extends 'base.html.twig' %}

{% block title %}Mon profil - Health & Fitness{% endblock %}

{% block body %}
    <div class="container" style="max-width: 800px;">
        <h1 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 2rem;">Mon profil</h1>

        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Informations personnelles</h2>
            </div>
            <div class="card-body">
                <form method="POST">
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value="{{ app.user ? app.user.email : '' }}" disabled>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Âge</label>
                        <input name="age" type="number" class="form-control" placeholder="Entrez votre âge">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Taille (cm)</label>
                        <input name="height" type="number" class="form-control" placeholder="Entrez votre taille">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Poids actuel (kg)</label>
                        <input name="weight" type="number" class="form-control" placeholder="Entrez votre poids">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Objectif</label>
                        <select name="goal" class="form-control">
                            <option value="Perte de poids">Perte de poids</option>
                            <option value="Prise de masse">Prise de masse</option>
                            <option value="Maintien">Maintien</option>
                            <option value="Endurance">Endurance</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

