{% extends 'base.html.twig' %}

{% block title %}Gestion des commandes - Administration{% endblock %}

{% block body %}
    <div class="container">
        <h1 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 2rem;">Gestion des commandes</h1>
        
        <div class="card">
            <div class="card-body">
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Client</th>
                                <th>Produit</th>
                                <th>Quantité</th>
                                <th>Prix</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td>{{ order.id }}</td>
                                    <td>{{ order.user.email }}</td>
                                    <td>{{ order.productName }}</td>
                                    <td>{{ order.quantity }}</td>
                                    <td>{{ order.price }} €</td>
                                    <td>{{ order.createdAt|date('Y-m-d H:i') }}</td>
                                    <td>
                                        {% if order.status == 'pending' %}
                                            <span style="color: orange; font-weight: 600;">En attente</span>
                                        {% elseif order.status == 'accepted' %}
                                            <span style="color: green; font-weight: 600;">Acceptée</span>
                                        {% elseif order.status == 'refused' %}
                                            <span style="color: red; font-weight: 600;">Refusée</span>
                                        {% else %}
                                            <span>{{ order.status }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if order.status == 'pending' %}
                                            <form method="POST" action="{{ path('app_admin_orders') }}" style="display: inline-block;">
                                                <input type="hidden" name="action" value="update_status">
                                                <input type="hidden" name="id" value="{{ order.id }}">
                                                <input type="hidden" name="status" value="accepted">
                                                <button type="submit" class="btn btn-primary" style="padding: 0.25rem 0.75rem; font-size: 0.875rem; margin-right: 0.5rem;">Accepter</button>
                                            </form>
                                            <form method="POST" action="{{ path('app_admin_orders') }}" style="display: inline-block;">
                                                <input type="hidden" name="action" value="update_status">
                                                <input type="hidden" name="id" value="{{ order.id }}">
                                                <input type="hidden" name="status" value="refused">
                                                <button type="submit" class="btn" style="padding: 0.25rem 0.75rem; font-size: 0.875rem; background: #dc3545; color: white; border: none;">Refuser</button>
                                            </form>
                                        {% else %}
                                            <span style="color: var(--gray); font-size: 0.875rem;">Traité</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" style="text-align: center; color: var(--gray);">Aucune commande</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


