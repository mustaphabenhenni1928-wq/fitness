{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Health & Fitness{% endblock %}

{% block body %}
    <div class="container" style="max-width: 500px; margin: 3rem auto;">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Mot de passe oublié</h1>
            </div>
            <div class="card-body">
                <p style="color: var(--gray); margin-bottom: 1.5rem;">
                    Entrez votre adresse email et nous vous enverrons un code de réinitialisation.
                </p>

                <form method="POST">
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" required autofocus>
                    </div>

                    <button class="btn btn-primary" type="submit" style="width: 100%;">
                        Envoyer le code de réinitialisation
                    </button>
                </form>
            </div>
            <div class="card-footer text-center">
                <p style="color: var(--gray);">
                    <a href="{{ path('app_login') }}" style="color: var(--primary-color); text-decoration: none; font-weight: 600;">
                        Retour à la connexion
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}

